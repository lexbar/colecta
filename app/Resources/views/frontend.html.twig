{% extends '::base.html.twig' %}

{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}

{% block body %}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <h1><a class="brand" href="/">Colecta</a></h1>
            
            <ul class="nav">
              <li class="active"><a href="/">Web</a></li>
              <li><a href="#">El Club</a></li>
              <li><a href="#">Administración</a></li>
            </ul>
            
            <form action={{ path('ColectaSearch')}} method="GET" class="form-search pull-right">
                <div class="input-append">
                    <input type="text" class="input-medium search-query" name="search" value="{{ app.request.get('search') }}">
                    <button type="submit" class="btn">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
<div class="row">
<div class="span2" id="sidebar">
    <nav>
        <ul> 
            <li><a class="{% block home '' %}" href="/"><i class="icon-home"></i> Inicio</a></li>
            <li><a class="{% block posts '' %}" href="/post/"><i class="icon-file"></i> Publicaciones</a></li>
            <li><a class="{% block events '' %}" href="/event/"><i class="icon-calendar"></i> Eventos</a></li>  
            <li><a class="{% block routes '' %}" href="/route/"><i class="icon-globe"></i> Rutas</a></li>
            <li><a class="{% block places '' %}" href="/place/"><i class="icon-map-marker"></i> Lugares</a></li>
            <li><a class="{% block files '' %}" href="/file/"><i class="icon-folder-open"></i> Archivos</a></li>
            <li><a class="{% block polls '' %}" href="/poll/"><i class="icon-tasks"></i> Encuestas</a></li>
            <li><a class="{% block contests '' %}" href="/contest/"><i class="icon-gift"></i> Concursos</a></li>
            <li><a class="{% block people '' %}" href="/"><i class="icon-user"></i> Personas</a></li>
        </ul> 
    </nav>
</div>

<div class="span7" id="stream">
{% if app.session.hasFlash('error') %}
    <div class="alert alert-error">
        {{ app.session.flash('error') }}
    </div>
{% endif %}

{% block article %}{% endblock %}
</div>

<div class="span3" id="userbar">
    {% if app.user %}
    
        <p class="myself"><img src="{{ app.user.avatar }}" width="48" height="48"> <strong>{{ app.user.name }}</strong><br><a href="">Editar perfil</a> | <a href="{{ path('userLogout') }}">Salir</a></p>
        
        {% set notifications = colectauser.notDismissedNotifications | length %}
        <p>
            <a class="btn btn-mini" href="/notifications/"><i class="icon-envelope"></i> <span class="label label-important" style="font-size: 10px;">3</span> Mensajes</a> 
            <a class="btn btn-mini" href="/notifications/"><i class="icon-bullhorn"></i>{% if notifications > 0 %} <span class="label label-warning" style="font-size: 10px;">{{ notifications }}</span>{% endif %} Notificaciones</a>
        </p>
        
        {% for notification in colectauser.notDismissedNotifications %}
            <p class="alert alert-block"><a onclick="" href="{{ path('userNotificationDismiss', {'id' : notification.id}) }}" class="close pull-right">×</a>{{ notification.text | raw }}</p>
        {% endfor %}
    
    {% else %}    
    
    <form class="well login" action="{{ path('userLoginCheck') }}" method="post">
        <strong>Iniciar sesión</strong>
        
        <p><input type="text" class="input-medium" id="username" name="_username" placeholder="Email" value=""></p>
        
        <p><input type="password" id="password" name="_password" class="input-medium" placeholder="Contraseña"></p>
        
        <p><label for="remember_me" class="checkbox">
            <input id="remember_me" name="_remember_me" type="checkbox" checked /> Recuerdame
        </label></p>
        
        <p><button type="submit" name="login" class="btn">Acceder</button></p>
    </form>
    
    {% endif %}
    
    <div class="ads"><img src="//www.google.com/help/hc/images/adsense_185666_adformat-display_200x200_en.jpg" style="border:1px solid black" alt="200 x 200"><br></div>
    
</div>
</div>
</div>
{% endblock %}