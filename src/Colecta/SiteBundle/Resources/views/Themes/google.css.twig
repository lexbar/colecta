@import url(http://fonts.googleapis.com/css?family=Roboto:400);
body {
  background-color:#e0e0e0;
  -webkit-font-smoothing: antialiased;
  font: normal 14px ;
}
* {
    font-family: Roboto,arial,sans-serif;
}
h1, h2, h3, h4, h5, h6 {
    font-family: Roboto,arial,sans-serif;
}
a{
    color: {{ web_theme_colors[7] | default('#4285f4') }};
}
a:hover, a:focus, a:active {
    color: {{ web_theme_colors[8] | default('#2b6eda') }};
}

a.btn {
    color: #FFF;
}
a.btn-default {
    color: {{ web_theme_colors[7] | default('#4285f4') }};
}

.itemForm .nav li.active a, .itemForm .nav li.active a:active, .itemForm .nav li.active a:visited  {
    color: {{ web_theme_colors[6] | default('#4285f4') }}!important;
}

.navbar-default {background-color:#f4f4f4;border-width:0;}
.navbar-default .navbar-nav > .active > a,.navbar-default .navbar-nav > li:hover > a {border:0 solid {{ web_theme_colors[7] | default('#4285f4') }};border-bottom-width:2px;font-weight:800;background-color:transparent;}
.navbar-default .dropdown-menu {background-color:#ffffff;}
.navbar-default .dropdown-menu li > a {padding-left:30px;}

.nav-stacked>li+li {margin: 0;}
.nav-pills>li>a { background-color: #FFF; border-radius: 0; color: {{ web_theme_colors[7] | default('#4285f4') }};}

.nav-tabs.nav-justified>li>a {color: #333;}

.header {background-color:#ffffff;border-width:0;}
.header .navbar-collapse {background-color:#ffffff;}
.btn,.form-control,.panel,.list-group,.well {border-radius:1px;box-shadow:0 0 0;}
.form-control {border-color:#d7d7d7;}
.btn-primary {border-color:transparent;}
.label-primary,.list-group-item.active, .list-group-item.active:hover, .list-group-item.active:focus {background-color:{{ web_theme_colors[7] | default('#4285f4') }};}
.btn-primary, .btn-primary:visited, .btn-primary:link, .dropdown-menu>li>a:hover {
    background-color: {{ web_theme_colors[7] | default('#4285f4') }};
}
.btn-primary:hover, .btn-primary:focus, .btn-primary:active, .open .dropdown-toggle.btn-primary {
    background-color: {{ web_theme_colors[8] | default('#2b6eda') }};
}
.nav-pills>li.active>a {
    background-color: {{ web_theme_colors[7] | default('#4285f4') }};
}
.nav-pills>li.active>a:hover, .nav-pills>li.active>a:focus {
    background-color: {{ web_theme_colors[8] | default('#4285f4') }};
}
.btn-plus {background-color:#ffffff;border-width:1px;border-color:#dddddd;box-shadow:1px 1px 0 #999999;border-radius:3px;color:#666666;text-shadow:0 0 1px #bbbbbb;}
.well,.panel {border-color:#d2d2d2;box-shadow:0 1px 0 #cfcfcf;border-radius:3px;}
.btn-success,.label-success,.progress-bar-success{background-color:#65b045;}
.btn-info,.label-info,.progress-bar-info{background-color:#a0c3ff;border-color:#a0c3ff;}
.btn-danger,.label-danger,.progress-bar-danger{background-color:#dd4b39;}
.btn-warning,.label-warning,.progress-bar-warning{background-color:#f4b400;color:#444444;}

hr {border-color:#ececec;margin: 15px 0}
button {
 outline: 0;
}
textarea {
 resize: none;
 outline: 0; 
}
.panel .panel-heading {
 background-color:#ffffff;
 font-weight:700;
 font-size:16px;
 color:#262626;
 border-color:#ffffff;
}
.panel .panel-heading h3 a {
 border: 0 solid #efefef;
 border-bottom-width: 1px;
 padding-bottom: 10px;
 font-size: 18px;
 margin-top: 10px;
 margin-bottom: 10px;
 font-weight: 500;
 line-height: 1.1;
}
.panel .panel-heading h3 a.pull-right{
 border: none;
 font-weight: 400;
 font-size: 11px;
 color: #428bca;
 margin: 0;
 padding: 0;
}
.inner-addon .fa {
 background-color: {{ web_theme_colors[7] | default('#4285f4') }};
 color: #FFF !important;
}
.inner-addon .fa:hover {
 background-color:{{ web_theme_colors[8] | default('#2b6eda') }};
}
.panel .panel-default {
 border-color:#cccccc;
}
.panel .panel-thumbnail {
 padding:0;
}
.panel .img-circle {
 width:50px;
 height:50px;
}
.item .panel-title a, .item .panel-title a:visited, .item .panel-title a:link   {
    color: #222;
}
.item .date a {
    color: #222;
}
.list-group-item:first-child,.list-group-item:last-child {
 border-radius:0;
}
h3,h4,h5 { 
 border:0 solid #efefef; 
 border-bottom-width:1px;
 padding-bottom:10px;
}
.panel.panel-highlight .panel-heading h3 {
    border: none;
    padding: 0;    
}
.panel.panel-highlight .panel-heading h3 a {
    border: none;
    margin: 0;
}
.modal h4 {
    padding: 0;
    border: none;
}
.modal-footer {
 border-width:0;
}
.dropdown-menu {
 background-color:#f4f4f4;
 border-color:#f0f0f0;
 border-radius:0;
 margin-top:-1px;
}

a.myname {
    padding: 5px 5px 0 10px;
}
a.myname img {
border-radius: 50%;
border-bottom: 2px solid #ccc;
background-color: #FFF;
}
#self a.myname strong {
    top: 15px;
    right: 20px;
    left: 70px;
}
.calendar-heading {
    background-color: #FFF;
    padding: 5px 4px;
    margin: 0;
}
.calendar tbody tr td {
    border: none;
}
.item .itemActions {
    border-top: 1px solid #efefef;
}
.item .thumbnails.fullview {
    border-top: 1px solid #efefef;
}
.item .itemActions a, .item .itemActions span {
    color: #333;
    line-height: 1.5;
}
.item .details img {
    vertical-align: bottom;
    border-radius: 50%;
    background-color: #FFF;
}
.comments .media .pull-left img {
    border-radius: 50%;
    background-color: #FFF;
}
.item .list-group-item {
    border: 1px dashed #eaeaea;
}
.profileHeader h2 {
    font-size: 22px;
}

.list-group-item.active, .list-group-item.active:hover, .list-group-item.active:focus {
    background-color: {{ web_theme_colors[8] | default('#009BDB') }};
    border-color: {{ web_theme_colors[9] | default('#009BDB') }};
    color: #FFF;
}

.progress {
    border-radius: 3px;
    box-shadow: none;
    height: 4px;
    margin-top: 10px;
}
.progress-bar-primary {
    background-color: {{ web_theme_colors[4] | default('#009BDB') }};
}

@media (max-width: 1200px) { /* Medium devices */
    #self a.myname strong {
        top: 8px;
        left: 60px;
    }
}
@media (max-width: 767px) { /* Extra Small devices */
    .nav-tabs li.active a {
        color: #FFF;
        border-radius: 0;
        border: none;
        background-color: #4285f4;
    }
    .nav-tabs li a:hover {
        border: none !important;    
    }
}