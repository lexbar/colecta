
body {
  background-color:#e9eaed;
  font-size: 14px;
}
* {
    font-family: helvetica, arial, 'lucida grande', sans-serif;
}
h1, h2, h3, h4, h5, h6 {
    font-family: helvetica, arial, 'lucida grande', sans-serif;
}
a{
    color: {{ web_theme_colors[7] | default('#4e69a2') }};
}
a:hover, a:focus, a:active {
    color: {{ web_theme_colors[8] | default('#2b6eda') }};
}

a.btn {
    color: #FFF;
}
a.btn-default {
    color: {{ web_theme_colors[7] | default('#4e69a2') }};
}
.navbar {
    min-height: 45px;
}
.nav>li>a {
    padding: 6px;
    font-size: 14px;
}
.nav>li>a:hover {
    background-color: #dcdee3;
}
.navbar-default {
    background-color: {{ web_theme_colors[9] | default('#3b5998') }};
    border-width:0;
    border-bottom: 1px solid {{ web_theme_colors[9] | default('#133783') }};
    background: -webkit-linear-gradient({{ web_theme_colors[8] | default('#4e69a2') }}, {{ web_theme_colors[9] | default('#3b5998') }}); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient({{ web_theme_colors[8] | default('#4e69a2') }}, {{ web_theme_colors[9] | default('#3b5998') }}); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient({{ web_theme_colors[8] | default('#4e69a2') }}, {{ web_theme_colors[9] | default('#3b5998') }}); /* For Firefox 3.6 to 15 */
    background: linear-gradient({{ web_theme_colors[8] | default('#4e69a2') }}, {{ web_theme_colors[9] | default('#3b5998') }}); /* Standard syntax */
    border-radius: 0;
}
.navbar-default .navbar-nav > .active > a,.navbar-default .navbar-nav > li > a:hover { background-color: {{ web_theme_colors[7] | default('#3a548c') }}; color: #FFF;}
.navbar-default .dropdown-menu {background-color:#ffffff;}
.navbar-default .dropdown-menu li > a {padding-left:30px;}
.navbar-default .navbar-nav>li>a, .navbar-default .navbar-brand {
    color: #FFF;
    font-family: 'helvetica neue', helvetica, arial, 'lucida grande', sans-serif;
    text-shadow: 0 -1px rgba(0, 0, 0, .5);
    font-size: 14px;
    padding: 4px 10px;
    margin: 7px 5px 2px;
}
.navbar-default a.navbar-brand {
    font-size: 18px;
}
.navbar-default a.navbar-brand:hover, .navbar-default a.navbar-brand:active, .navbar-default a.navbar-brand:focus {
    color: #EEE;    
}
    
.nav-stacked>li+li {margin: 0;}
.nav-pills>li>a { background-color: transparent; border-radius: 0; color: #333;}

.nav-tabs.nav-justified>li>a {color: #333;}

.header {background-color:#ffffff;border-width:0;}
.header .navbar-collapse {background-color:#ffffff;}
.navbar-default .navbar-nav>li>a i {
    color: #DDD;
    vertical-align: middle;
    text-shadow: 0 1px rgba(255, 255, 255, .2);
    font-size:18px;
}
#searchForm {
    margin: 7px 0;
}
#searchForm input {
    height: 28px;
    border-color: {{ web_theme_colors[9] | default('#3b5998') }};
}
#searchForm .inner-addon .fa {
    padding: 6px;
}
#searchForm .inner-addon .fa:hover {
    background-color: transparent;
}
.form-control {border-color:#d7d7d7;}
.btn-primary {border-color:transparent;}
.label-primary,.list-group-item.active, .list-group-item.active:hover, .list-group-item.active:focus {background-color:{{ web_theme_colors[7] | default('#4285f4') }};}
.btn {
    border-radius: 2px;
}
.btn-primary {
    border-color: {{ web_theme_colors[9] | default('#435a8b #3c5488 #334c83') }};
}
.btn-primary, .btn-primary:visited, .btn-primary:link, .dropdown-menu>li>a:hover {
    background-color: {{ web_theme_colors[8] | default('#4e69a2') }};
}
.btn-primary:hover, .btn-primary:focus, .btn-primary:active, .open .dropdown-toggle.btn-primary {
    background-color: {{ web_theme_colors[8] | default('#4e69a2') }};
    border-color: {{ web_theme_colors[9] | default('#435a8b #3c5488 #334c83') }};
}
.nav-pills>li.active>a {
    background-color: {{ web_theme_colors[7] | default('#6d84b4') }};
}
.nav-pills>li.active>a:hover, .nav-pills>li.active>a:focus {
    background-color: #666;
}
.btn-plus {background-color:#ffffff;border-width:1px;border-color:#dddddd;box-shadow:1px 1px 0 #999999;border-radius:3px;color:#666666;text-shadow:0 0 1px #bbbbbb;}
.well,.panel {border-color:#e5e6e9 #dfe0e4 #d0d1d5;border-radius:3px;margin-bottom: 10px;}
.btn-success,.label-success,.progress-bar-success{background-color:#65b045;}
.btn-info,.label-info,.progress-bar-info{background-color:#a0c3ff;border-color:#a0c3ff;}
.btn-danger,.label-danger,.progress-bar-danger{background-color:#dd4b39;}
.btn-warning,.label-warning,.progress-bar-warning{background-color:#f4b400;color:#444444;}

hr {border-color:#ececec;margin: 15px 0}
button {
 outline: 0;
}
textarea {
 resize: none;
 outline: 0; 
}
.panel .panel-heading {
 background-color:#ffffff;
 font-weight:700;
 font-size:16px;
 color:#262626;
 border-color:#ffffff;
 padding-bottom: 0;
}
.panel .panel-heading h3 a {
 padding-bottom: 10px;
 font-size: 18px;
 margin-top: 10px;
 margin-bottom: 10px;
 font-weight: 500;
 line-height: 1.1;
}
.panel .panel-heading h3 a.pull-right{
 border: none;
 font-weight: 400;
 font-size: 11px;
 color: #428bca;
 margin: 0;
 padding: 0;
}
.panel-footer {
    background-color: #f6f7f8 !important;
}
.comments .media textarea {
    border-radius: 0;
}
.item .panel-body {
    padding-top: 0;
}
.inner-addon .fa {
 color: #CCC !important;
}
.inner-addon .fa:hover {
 background-color:{{ web_theme_colors[8] | default('#2b6eda') }};
}
.panel .panel-default {
 border-color:#cccccc;
}
.panel .panel-thumbnail {
 padding:0;
}
.panel .img-circle {
 width:50px;
 height:50px;
}
.item .panel-title a, .item .panel-title a:visited, .item .panel-title a:link   {
    color: #222;
}
.item .date a {
    color: #222;
}
.list-group-item:first-child,.list-group-item:last-child {
 border-radius:0;
}
h3,h4,h5 { 
 padding-bottom:10px;
}
.modal h4 {
    padding: 0;
    border: none;
}
.modal-footer {
 border-width:0;
}
.dropdown-menu {
 background-color:#f4f4f4;
 border-color:#f0f0f0;
 border-radius:0;
 margin-top:-1px;
}

a.myname {
    padding: 5px 5px 0 0;
}
a.myname img {
background-color: #FFF;
}
#self a.myname strong {
    font-size: 13px;
    font-weight: bold;
    line-height: 13px;
    right: 20px;
    left: 62px;
}
.calendar-heading {
    background-color: #FFF;
    padding: 5px 4px;
    margin: 0;
}
.calendar tbody tr td {
    border: none;
}
.item .itemActions {
    border-top: 1px solid #efefef;
}
.item .itemActions a, .item .itemActions span {
    color: #333;
    line-height: 1.5;
}
.item .list-group-item {
    border: 1px dashed #eaeaea;
}
.profileHeader h2 {
    font-size: 22px;
}

.list-group-item.active, .list-group-item.active:hover, .list-group-item.active:focus {
    background-color: {{ web_theme_colors[8] | default('#4e69a2') }};
    border-color: {{ web_theme_colors[9] | default('#4e69a2') }};
    color: #FFF;
}

.progress {
    border-radius: 3px;
    box-shadow: none;
    height: 4px;
    margin-top: 10px;
}
.progress-bar-primary {
    background-color: {{ web_theme_colors[4] | default('#6d84b4') }};
}

@media (max-width: 1200px) { /* Medium devices */
    #self a.myname strong {
        top: 8px;
        left: 60px;
    }
}
@media (max-width: 767px) { /* Extra Small devices */
    .nav-tabs li.active a {
        color: #FFF;
        border-radius: 0;
        border: none;
        background-color: #4285f4;
    }
    .nav-tabs li a:hover {
        border: none !important;    
    }
}