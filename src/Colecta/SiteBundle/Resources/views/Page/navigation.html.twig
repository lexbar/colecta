{% if pages | length > 0 %}
	<strong class="pb-2 pt-1 pt-sm-3 d-block">PÃ¡ginas</strong>
	<ul class="list-unstyled">
	    {% for page in pages %}
	    <li{% if app.request.uri == url('ColectaPage',{slug:page.slug}) %} class="active"{% endif %}><a href="{{ path('ColectaPage', { slug: page.slug } ) }}"><i class="fa fa-{{ page.icon }} fa-fw"></i> {{ page.name }}</a></li>
