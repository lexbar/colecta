{% if pages | length > 0 %}
<hr>

<ul class="nav nav-pills nav-stacked">
    {% for page in pages %}
    <li {% if app.request.uri == url('ColectaPage',{slug:page.slug}) %}class="active"{% endif %}>
        <a href="{{ path('ColectaPage', { slug: page.slug } ) }}">
            <i class="fa fa-{{ page.icon }} fa-fw"></i> {{ page.name }}
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}

{% if web_links | length > 0 %}
<hr>

<ul class="nav nav-pills nav-stacked">
    {% for link in web_links %}
    <li>
        <a href="{{ link[0] }}">
            <i class="fa fa-{{ link[2] | default('') }} fa-fw"></i> {{ link[1] | default(link[0]) }}
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}