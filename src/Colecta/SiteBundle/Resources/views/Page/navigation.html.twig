{% if pages | length > 0 %}
<ul class="nav nav-pills nav-stacked panel panel-default">
    {% for page in pages %}
    <li {% if app.request.uri == url('ColectaPage',{slug:page.slug}) %}class="active"{% endif %}>
        <a href="{{ path('ColectaPage', { slug: page.slug } ) }}">
            <i class="fa fa-{{ page.icon }} fa-fw"></i> {{ page.name }}
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}

{% if web_links | length > 0 %}
<ul class="nav nav-pills nav-stacked panel panel-default">
    {% for link in web_links %}
    <li>
        <a href="{{ link[0] }}">
            <i class="fa fa-{{ link[2] | default('') }} fa-fw"></i> {{ link[1] | default(link[0]) }}
        </a>
    </li>
    {% endfor %}
</ul>
{% endif %}

{% if app.user and app.user.role.siteConfigSettings %}
    <a href="{{ path('ColectaBackendPageIndex') }}" class="btn btn-sm btn-link"><i class="fa fa-pencil"></i> Administrar contenido</a>
{% endif %}