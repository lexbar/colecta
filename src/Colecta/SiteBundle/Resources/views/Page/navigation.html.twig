{% if web_links | length > 0 %}
	<strong class="pb-2 pt-1 pt-sm-3 d-block">Enlaces</strong>
	<ul class="list-unstyled">
	    {% for link in web_links %}
	    <li><a href="{{ link[0] }}" target="_blank"><i class="fa fa-{{ link[2] | default('') }} fa-fw"></i> {{ link[1] | default(link[0]) }}</a></li>
	    {% endfor %}
	</ul>
{% endif %}