{% set new = app.user and app.session.get('sinceLastVisit') and app.session.get('sinceLastVisit') != 'dismiss' and app.session.get('sinceLastVisit') < item.date %}

<div class="folder micro">
    <h2>{% if new %}<i class="icon-asterisk" style="color:orange;"></i> {% endif %}<a href="{{ path('ColectaFolderView', { 'slug': item.slug }) }}">{{ item.name }}</a></h2>
    
    {% set files = item.isolateLast %}
    
    <ul class="thumbnails">
        {% for file in files | reverse | slice(0,6) %}
            {% if file.filetype in ['jpeg','gif','png'] %}
                <li><a class="thumbnail three" href="{{ path('ColectaFileView', { 'slug': file.slug }) }}"><img width="150" height="130" src="{{ path('ColectaFileThumbnail', {'slug':file.slug, 'width':'150', 'height':'130'}) }}"></a></li>
            {% endif %}
        {% endfor %}
    </ul>
    
    {% for file in files %}
        {% if file.filetype not in ['jpeg','gif','png'] %}
            <p>
            <strong><a href="{{ path('ColectaFileView', { 'slug': file.slug }) }}">{{ file.name }}</a></strong><br>
            <a href="{{ path('ColectaFileDownload',{ 'slug': file.slug, 'type': file.filetype }) }}" class="btn btn-warning"><i class="icon-download-alt icon-large"></i> <strong>Descargar fichero <span style="text-transform: uppercase;">{{ file.filetype }}</span></strong></a>
            </p>
        {% endif %}
    {% endfor %}
    
    <p>{{ item.summary | usercontent | raw | nl2br }}</p>
</div>