<h2>{{ user.name }}</h2>

{% if app.user and app.user.id == user.id and user.role.name != 'ROLE_BANNED' %}<p><a href="{{ path('userEditProfile') }}"><i class="fa fa-edit"></i> Editar perfil</a></p>{% endif %}

<div class="profileAvatar"><img class="img-responsive" width="255" height="250" src="{{ path('userAvatar',{'uid':user.id,'width':250,'height':250}) }}"></img></div>

{% if user.profile and not user.profile.empty and app.user and app.user.role.userView %}
    <p class="text-center"><strong>{{ user.profile.name }} {{ user.profile.surname }}</strong> {{ user.profile.idNumber ? '(' ~ user.profile.idNumber ~ ')' }} {% if user.profile.partnerId and app.user and app.user.role.userEdit %}<a href="{{ path('ColectaBackendUserProfile',{user_id: user.id}) }}">#{{ user.profile.partnerId }}</a>{% endif %}</p>
    <p class="text-center">{% if user.profile.sex %} <i class="fa fa-fw fa-{{ user.profile.sex == 'male' ? 'mars' : 'venus' }}"></i>{% endif %} {% if user.profile.birthDate %}{{ user.profile.birthDate | age }} a√±os {% endif %}
    {% if user.profile.address %}<i class="fa fa-fw fa-home"></i> {{ user.profile.address }}{% endif %} {% if user.profile.phone %}<i class="fa fa-fw fa-phone"></i> {{ user.profile.phone }}{% endif %}</p>
{% endif %}

<hr>

<ul class="nav nav-pills nav-stacked">
    <li{% if active == 'items' %} class="active"{% endif %}><a href="{{ path('userProfile', {'id':user.id}) }}">Publicaciones</a></li>
    <li{% if active == 'assistances' %} class="active"{% endif %}><a href="{{ path('ColectaUserAssistances', {'id':user.id}) }}">Rendimiento <i class="fa fa-bar-chart-o"></i></a></li>
    {% if app.user and app.user.id != user.id and user.role.messageSend %}<li><a href="{{ path('userConversation', {'user_id':user.id}) }}">Enviar Mensaje <i class="fa fa-envelope-o"></i></a></li>{% endif %}
</ul>