<div class="profileHeader clearfix">
    <img class="pull-left avatar" src="{{ path('userAvatar',{'uid':user.id,'width':75,'height':75}) }}">
    <div class="pull-left">
        <h2>{{ user.name }}</h2>

        <ul class="nav nav-pills">
            {% if app.user and app.user.id == user.id and user.role.name != 'ROLE_BANNED' %}<li><a href="{{ path('userEditProfile') }}">Editar perfil</a></li>{% endif %}
            <li{% if active == 'items' %} class="active"{% endif %}><a href="{{ path('userProfile', {'id':user.id}) }}">Publicaciones</a></li>
            <li{% if active == 'assistances' %} class="active"{% endif %}><a href="{{ path('ColectaUserAssistances', {'id':user.id}) }}">Rendimiento <i class="fa fa-bar-chart-o"></i></a></li>
            {% if app.user and app.user.id != user.id and user.role.messageSend %}<li><a href="{{ path('userMessageNewTo', {'user_id':user.id}) }}">Enviar Mensaje <i class="fa fa-envelope-o"></i></a></li>{% endif %}
        </ul>
    </div>
</div>