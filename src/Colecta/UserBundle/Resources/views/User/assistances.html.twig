{% extends '::frontend.html.twig' %}

{% block article %}

<div class="row" style="margin-bottom:10px">
    <div class="col-sm-2 hidden-xs">
        <img class="img-responsive" src="{% if user.avatar %}{{ path('userAvatar',{'uid':user.id,'width':120,'height':120}) }}{% else %}/img/unknown.gif{% endif %}">
    </div>
    
    <div class="col-sm-10 col-xs-12">
    
        <h2>{{ user.name }} <br><small>Asistencia a actividades</small></h2>
            
        <div class="row">
            <div class="col-sm-12">
                <div class="btn-group btn-group-justified">
                    <a class="btn btn-sm btn-default" href="{{ path('userProfile', {'id':user.id}) }}">Historial</a> 
                    <a class="btn btn-sm btn-default active" href="{{ path('ColectaUserAssistances', {'id':user.id}) }}">Asistencias</a> 
                    {% if app.user and app.user.id != user.id and user.role.name != 'ROLE_BANNED' %}<a class="btn btn-sm btn-default" href="{{ path('userMessageNewTo', {'user_id':user.id}) }}">Enviar Mensaje</a>{% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% for a in assistances %}
    {% set path = 'Colecta' ~ a.event.type ~ ':micro.html.twig' %}
    {% set path = path | replace({'/':'Bundle:'}) %}
    {% include path with { 'item': a.event } only %}
{% else %}
    <p><strong>No consta como asistente a ning√∫n evento.</strong></p>
{% endfor %}
{% endblock %}