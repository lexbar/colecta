{% extends '::frontend.html.twig' %}

{% block article %}

<div class="row" style="margin-bottom:10px">
    <div class="col-sm-2 hidden-xs">
        <img class="img-responsive" src="{% if user.avatar %}{{ path('userAvatar',{'uid':user.id,'width':120,'height':120}) }}{% else %}/img/unknown.gif{% endif %}">
    </div>
    
    <div class="col-sm-10 col-xs-12">
    
        <h2>{{ user.name }} <br><small>Asistencia a actividades</small></h2>
            
        <div class="row">
            <div class="col-sm-12">
                <ul class="nav nav-pills" id="myTab">
                    <li><a href="{{ path('userProfile', {'id':user.id}) }}" data-toggle="tab">Publicaciones <i class="fa fa-pencil-square-o"></i></a></li>
                    <li class="active"><a href="{{ path('ColectaUserAssistances', {'id':user.id}) }}" data-toggle="tab">Rendimiento <i class="fa fa-bar-chart-o"></i></a></li>
                    {% if app.user and app.user.id != user.id and user.role.name != 'ROLE_BANNED' %}<li><a href="{{ path('userMessageNewTo', {'user_id':user.id}) }}">Enviar Mensaje <i class="fa fa-envelope-o"></i></a></li>{% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>

{% for a in assistances %}
    {% set path = 'Colecta' ~ a.event.type ~ ':micro.html.twig' %}
    {% set path = path | replace({'/':'Bundle:'}) %}
    {% include path with { 'item': a.event } only %}
{% else %}
    <p><strong>No consta como asistente a ning√∫n evento.</strong></p>
{% endfor %}
{% endblock %}