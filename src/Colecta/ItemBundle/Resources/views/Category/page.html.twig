{% extends '::frontend.html.twig' %}

{% block title %}{{ category.name }} | Categorías{% endblock %}

{% block article %}

<a href="{{ path('ColectaCategoryIndex') }}" class="btn btn-default pull-right"><i class="fa fa-angle-double-left"></i> Índice de categorías</a>

<h2><i class="fa fa-list-ul fa-fw"></i> Publicado en <em>{{ category.name }}</em>{% if page > 1 %} <small> página {{ page }}</small>{% endif %}</h2>

{% set shownItems = [] %}
{% set mainItemsToShow = [] %}

{% for item in items if not item.part %}
    {% set mainItemsToShow = mainItemsToShow | merge([item.id]) %}
{% endfor %}

{% for item in items if item.id not in shownItems %}
    {% if item.part %}
        {% for relitem in item.related %}
            {% if not relitem.part %}
                {% set item = relitem %}
            {% endif %}
        {% endfor %}
    {% endif %}
    <div class="item" id="item{{ item.id}}">        
        {% set path = 'Colecta' ~ item.type ~ ':mini.html.twig' %}
        {% set path = path | replace({'/':'Bundle:'}) %}
        {% include path with { 'item': item } only %}
        
        {% include 'ColectaItemBundle:Default:related.html.twig' with { 'items' : item.related } %}
    </div>
    
    {% set shownItems = shownItems | merge([item.id]) %}
    {% for ri in item.related %}
        {% set shownItems = shownItems | merge([ri.id]) %}
    {% endfor %}
{% else %}
    <div class="monocontent">
        <p class="lead">No hay publicaciones en esta categoría</p>
    </div>
{% endfor %}

<ul class="pager">
  <li class="previous{% if page == 1 %} disabled{% endif %}">
    <a href="{% if page > 1 %}{{ path('ColectaCategoryPage', {'slug':category.slug, 'page': page - 1 }) }}{% else %}{% endif %}">&larr; Anteriores</a>
  </li>
  <li class="next{% if not thereAreMore %} disabled{% endif %}">
    <a href="{% if thereAreMore %}{{ path('ColectaCategoryPage', {'slug':category.slug, 'page': page + 1 }) }}{% else %}{% endif %}">Siguientes &rarr;</a>
  </li>
</ul>

{% endblock %}