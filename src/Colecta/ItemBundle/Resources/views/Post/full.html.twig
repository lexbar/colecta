{% extends '::frontend.html.twig' %}

{% block posts 'active' %}

{% block article %}
<div class="post full">
    {% include 'ColectaItemBundle:Default:itemheader.html.twig' with { 'item': item } only %}

    <h2>{{ item.name }}</h2>

    <p>{{ item.text | raw | nl2br }}</p>
    
    {% include 'ColectaItemBundle:Default:itemactions.html.twig' with { item: item } only %}
    
    {% include 'ColectaItemBundle:Comment:comments.html.twig' with { 'comments': item.comments, item: item } only %}
</div>
{% endblock %}