            {% if item.maxspeed > 0 %}<li><strong>Velocidad m√°xima:</strong> {{ item.maxspeed }} km/h</li>{% endif %}
            {% if item.minheight > 0 %}<li><strong>Cota inferior:</strong> {{ item.minheight }} m</li>{% endif %}
            {% if item.maxheight > 0 %}<li><strong>Cota superior:</strong> {{ item.maxheight }} m</li>{% endif %}
            <li><strong>Circular:</strong> {% if item.isloop %}S√≠{% else %}No{% endif %}</li>
            {% if item.IBP %}<li><strong>IBP:</strong> {{ item.IBP }}</li>{% endif %}
        </ul>
        
        <p>{{ item.description | usercontent | raw | nl2br }}</p>
    </div>
    {% include 'ColectaItemBundle:Default:related.html.twig' with { 'items' : item.related } %}
    
    {% include 'ColectaItemBundle:Default:itemactions.html.twig' with { item: item } only %}
    
