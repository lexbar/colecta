
<div class="route mini">
    <h2><a href="{{ path('ColectaRouteView', { 'slug': item.slug }) }}">{{ item.name }}</a></h2>
    <a href="{{ path('ColectaRouteView', { 'slug': item.slug }) }}" class="maplink"><img class="" src="{{ path('ColectaRouteMap',{id : item.id}) }}" width="500" height="240"></a>
    
