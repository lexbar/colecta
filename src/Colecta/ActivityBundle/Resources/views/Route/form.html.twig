{% if app.user %}
<form onSubmit="$('#RouteSubmit').disabled = 'disabled'; $('#RouteSubmitText').html('Subiendo...'); $('#RouteSubmitLoading').addClass('icon-refresh icon-spin');" action="{{ path('ColectaRouteUpload') }}" method="POST" class="form-horizontal well" enctype="multipart/form-data">
    <fieldset>
      <div class="control-group">
        <label class="control-label" for="RouteFile">Archivo</label>
        <div class="controls">
          <input type="file" id="RouteFile" name="file">
        </div>
      </div>
      
      <div class="form-actions">
        <button id="RouteSubmit" type="submit" class="btn btn-primary"><i id="RouteSubmitLoading"></i> <span id="RouteSubmitText">Subir e introducir datos</span></button>
      </div>
    </fieldset>
</form>
{% endif %}