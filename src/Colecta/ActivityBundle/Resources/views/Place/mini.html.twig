{% set mapwidth = 180 %}
{% set mapheight = 180 %}
<div class="place mini">
    <a href="{{ path('ColectaPlaceView', { 'slug': item.slug }) }}" class="thumbnail"><img class="" src="http://maps.google.com/maps/api/staticmap?center={{ item.latitude ~ ',' ~ item.longitude }}&zoom=13&size={{ mapwidth }}x{{ mapheight }}&maptype=roadmap&markers=color:blue%7C{{ item.latitude ~ ',' ~ item.longitude }}&sensor=false" width="{{ mapwidth }}" height="{{ mapheight }}"></a>
    <h2><a href="{{ path('ColectaPlaceView', { 'slug': item.slug }) }}">{{ item.name }}</a></h2>
    <p>{{ item.summary }}</p>
</div>