{% extends 'ColectaItemBundle:Default:itemMicro.html.twig' %}

{% set mapwidth = 250 %}
{% set mapheight = 160 %}

{% block thumbnail %}
    <a href="{{ path('ColectaPlaceView', { 'slug': item.slug }) }}"><img class="img-responsive" src="http://maps.google.com/maps/api/staticmap?center={{ item.latitude ~ ',' ~ item.longitude }}&zoom=12&size={{ mapwidth }}x{{ mapheight }}&maptype=terrain&markers=color:red%7C{{ item.latitude ~ ',' ~ item.longitude }}&sensor=false"></a>
{% endblock %}