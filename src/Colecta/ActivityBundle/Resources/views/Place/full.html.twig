{% extends '::frontend.html.twig' %}

{% block places 'active' %}

{% block article %}
    
    {% include 'ColectaItemBundle:Default:itemheader.html.twig' with { 'item': item } only %}
    
    <h2>{{ item.name }}</h2>
    
    <img src="http://maps.google.com/maps/api/staticmap?center={{ item.latitude ~ ',' ~ item.longitude }}&zoom=13&size=500x330&maptype=roadmap&markers=color:blue%7C{{ item.latitude ~ ',' ~ item.longitude }}&sensor=false" width="500" height="330">

    <p>{{ item.description | nl2br }}</p>
    
    {% include 'ColectaItemBundle:Comment:comments.html.twig' with { 'comments': item.comments, item: item } only %}
    
{% endblock %}