{% extends '::intranet.html.twig' %}

{% block rank 'active' %}

{% block content %} 
    
    <h2><i class="fa fa-trophy fa-fw"></i> Ranking {{ year }}{% if years | length > 1 or years | length == 1 and years[0].year != year %}<br> {% for y in years %}<a href="{{ path('ColectaActivitiesYearRank',{year:y.year}) }}" class="btn btn-xs {% if y.year == year %}btn-success{% else %}btn-default{% endif %}">{{ y.year }}</a> {% endfor %}</small>{% endif %}</h2>
    
    <div class="monocontent">
        <table class="table table-condensed table-hover">
        <thead><tr><th style="width: 100px;">Total</th><th style="width: 150px;">Nombre</th><th>Ranking</th></tr></thead>
        {% set maxkm = kms[users[0].id] %}
        {% for user in users %}
            <tr>
                <td>{{ kms[user.id] | number_format(1,'.',',') }} km</td>
                <td><a href="{{ path('ColectaUserAssistances', {'id':user.id}) }}">{{ user.name }}</a></td>
                <td><div class="progress"><div class="progress-bar progress-bar-success" style="width: {% if maxkm > 0 %}{{ (kms[user.id] / maxkm * 100) | number_format(1,'.',',') }}{% else %}0{% endif %}%;"></div></div></td>
            </tr>
        {% endfor %}
        </table>
    </div>
{% endblock%}